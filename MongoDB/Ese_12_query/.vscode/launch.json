{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "nodemon",
            "program": "${workspaceFolder}/server.ts",
            "request": "launch",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug TS-Node via npx", // Nome pi√π descrittivo
            "runtimeExecutable": "npx",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "ts-node", // Esegui ts-node
                "${workspaceFolder}/server.ts" // Sostituisci con il percorso del tuo file di ingresso
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "TSX Watch",
            "runtimeExecutable": "npx", // usa npx
            "runtimeArgs": [
                "tsx",
                "watch",
                "server.ts"
            ], // comando completo
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}